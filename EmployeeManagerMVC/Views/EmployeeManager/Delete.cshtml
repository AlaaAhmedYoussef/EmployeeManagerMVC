@model Employee

<h2>Delete Existing Employee</h2>
<h3 class="message">
    Warning : You are about to delete an employee record.</h3>

<form asp-controller="EmployeeManager" asp-action="Delete" method="post">
    <input type="hidden" asp-for="EmployeeID" />
    <table border="0">
        <tr>
            <td class="right">
                <label asp-for="EmployeeID"></label> :
            </td>
            <td>
                <span>@Model.EmployeeID</span>
            </td>
        <tr>
        <tr>
            <td class="right">
                <label asp-for="FirstName"></label> :
            </td>
            <td>
                <span>@Model.FirstName</span>
            </td>
        <tr>
            <td class="right">
                <label asp-for="LastName"></label> :
            </td>
            <td>
                <span>@Model.LastName</span>
            </td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="Title"></label> :
            </td>
            <td>
                <span>@Model.Title</span>
            </td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="BirthDate"></label> :
            </td>
            <td>
                <span>@Model.BirthDate</span>
            </td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="HireDate"></label> :
            </td>
            <td>
                <span>@Model.HireDate</span>
            </td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="Country"></label> :
            </td>
            <td>
                <span>@Model.Country</span>
            </td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="Notes"></label> :
            </td>
            <td>
                <span>@Model.Notes</span>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Delete</button>
            </td>
        </tr>
    </table>
</form>

